<!-- Snap to bottom right -->
<keybind key="C-W-3">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo">
        <x>-0</x>
        <y>-0</y>
        <height>50%</height>
        <width>50%</width>
    </action>
</keybind>
